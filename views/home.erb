<form class="newsletter-signup" action="newsletter" method="post">
  <h2>Stay up to date on Open HQ news</h2>

  <input type="hidden" name="authenticity_token" value="<%= session[:csrf] %>">
  <input type="text" id="email" name="email" placeholder="you@domain.com">
  <input type="submit" name="submit" value="Subscribe">

  <% [:notice, :error].each do |key| %>
    <% if flash.has? key %>
      <div class="error-notification <%= "-#{key}" %>">
        <%= flash[key] %>
      </div>
    <% end %>
  <% end %>
</form>
